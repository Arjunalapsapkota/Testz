    "mongoose": "^5.4.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.8",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-instagram": "^1.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  }
